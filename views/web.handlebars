<!doctype html>
<html>
<head>
  <title>Graph | Basic usage</title>

  <script type="text/javascript" src="js/vis.js"></script>
</head>

<body>

<div id="mygraph"></div>

<script type="text/javascript">
  // create an array with nodes
  
  
    var nodes = [
      {{#each node}}
        {id: {{id}}, label: {{message}} },
      {{/each}}
    ];


  //     // create an array with nodes
  // var nodes = [
